<%- layout('layouts/boilerplate') %>
<div class="row">
<div class="col-8 offset-2">
    <br>
    <br>
    <form action="/listings/<%= singleData._id %>?_method=PUT" method="post" novalidate class="needs-validation">
    <h3>Edit your Listing :</h3>
    <br>
    <p><b>Id:</b>   <%= singleData._id %></p>
    <div class="mb-3">
    <label for="title" class="form-label" ><b>Title :</b></label>
     <input type="text" value="<%= singleData.title %>" name="title" class="form-control" id="title" required>
     <div class="valid-feedback">
        Title Looks Good!
       </div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label" ><b>Description:</b></label>
    <input type="text" value="<%= singleData.description %>" name="description" class="form-control" id="description" required>
</div>
<div class="mb-3">
    <label for="image" class="form-label"><b>Image:</b></label>
    <input type="url" value="<%= singleData.image %>" name="image" class="form-control" id="image" required>
</div>
<div class="mb-3">
    <label for="price" class="form-label"><b>Price:</b></label>
    <input type="number" value="<%= singleData.price %>" name="price" class="form-control" id="price" required>
    <div class="invalid-feedback">
        Price Should Be Valid!
       </div>
    </div>
    <div class="mb-3">
        <label for="location" class="form-label"><b>Location:</b></label>
    <input type="text" value="<%= singleData.location %>" name="location" id="location" class="form-control" required>
    <div class="invalid-feedback">
        Location Should Be Valid!
       </div>
</div>
    <div class="mb-3">
        <label for="country" class="form-label"><b>Country:</b></label>
    <input type="text" value="<%= singleData.country %>" name="country" class="form-control" id="country" required>
    <div class="invalid-feedback">
     Country Should Be Valid!
       </div>
</div>
    <br>
    <br>

    <button class="btn btn-dark add-btn">Edit</button>
</form>
</div>
</div>
